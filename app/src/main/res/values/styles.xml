<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <style name="BackButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableLeft">@drawable/ic_keyboard_arrow_left_black_24dp</item>
        <item name="colorButtonNormal">@color/colorWarning</item>
        <item name="android:textColor">@color/defaultBlack</item>
        <item name="android:background">@drawable/back_button_bg</item>
        <item name="android:text">Atr√°s</item>
    </style>

    <style name="SuccessButton" parent="Widget.AppCompat.Button.Colored">

        <item name="colorButtonNormal">@color/colorSuccess</item>
        <item name="android:textColor">@color/defaultBlack</item>
    </style>

    <style name="NextButton" parent="Widget.AppCompat.Button">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">Siguiente</item>
        <item name="android:drawableRight">@drawable/ic_keyboard_arrow_right_black_24dp</item>
        <item name="android:background">@drawable/success_button_bg</item>
        <item name="colorButtonNormal">@color/colorSuccess</item>
        <item name="android:textColor">@color/defaultBlack</item>
    </style>

</resources>
