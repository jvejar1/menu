<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wallyImage1"
        android:layout_width="225dp"
        android:layout_height="186dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wallyTopTextView"
        app:layout_constraintVertical_bias="0.386" />

    <ImageView
        android:id="@+id/wallyImage2"
        android:layout_width="225dp"
        android:layout_height="186dp"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toStartOf="@+id/wallyImage3"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/wallyImage1"
        app:layout_constraintTop_toTopOf="@+id/wallyImage1" />

    <ImageView

        android:id="@+id/wallyImage3"
        android:layout_width="225dp"
        android:layout_height="186dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/wallyImage4"
        app:layout_constraintTop_toTopOf="@+id/wallyImage2" />

    <ImageView
        android:id="@+id/wallyImage4"
        android:layout_width="225dp"
        android:layout_height="186dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wallyImage3" />

    <TextView

        android:id="@+id/textViewWallyImage1"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/defaultBlack"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/wallyImage1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/wallyImage1"
        app:layout_constraintTop_toBottomOf="@+id/wallyImage1" />

    <TextView

        android:id="@+id/textViewWallyImage2"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/defaultBlack"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/wallyImage2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/wallyImage2"
        app:layout_constraintTop_toBottomOf="@+id/wallyImage2" />

    <TextView

        android:id="@+id/textViewWallyImage3"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/defaultBlack"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/wallyImage3"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/wallyImage3"
        app:layout_constraintTop_toBottomOf="@+id/wallyImage3" />

    <TextView

        android:id="@+id/textViewWallyImage4"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/defaultBlack"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/wallyImage4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/wallyImage4"
        app:layout_constraintTop_toBottomOf="@+id/wallyImage4" />

    <TextView

        android:id="@+id/wallyTopTextView"
        android:layout_width="519dp"
        android:layout_height="61dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        android:textColor="@color/defaultBlack"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <Button
        android:id="@+id/backButton"
        style="@style/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wallyTopTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>